<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Inicio", root_path %></li>
        <li><%= link_to "Pregunta", questions_path %></li>
        <li><%= link_to "Perdones", pardons_path %></li>
        <li><%= link_to "Ayuda", help_path %></li>
        <% if logged_in? %>
          <%if current_user.admin? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Usuarios <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Crear", new_user_path %></li>
              <li><%= link_to "Listar", users_path %></li>
            </ul>
          </li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Cuenta <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Perfil", current_user %></li>
              <li><%= link_to "Ajustes", edit_user_path(current_user) %></li>
              <li><%= link_to "Responder", questions_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Cerrar sesion", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Iniciar sesion", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>