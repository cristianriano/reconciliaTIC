<li id="micropost-<%= pardon.id %>">
  <% if pardon.kind == "1" %>
    <span style="color: #0000EE;">#PidoPerdonPor </span>
  <% else %>
    <span style="color: #0000EE;">#YoTambienPerdono </span>
  <% end %>
  </span>
  <span class="content">
    <%= pardon.content %><br/>
  </span>
  <span class="timestamp">
    Posteado hace <%= time_ago_in_words(pardon.created_at) %>.
    <% if !current_user.nil? %>
      <% if current_user.admin? %>
        <%= link_to "Eliminar", pardon, method: :delete,
                                       data: { confirm: "Â¿Seguro?" } %>
      <% end %>
    <% end %>
  </span>
</li>